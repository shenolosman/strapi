@page "/category"
@inject HttpClient Http
@using Microsoft.Extensions.Configuration;
@inject IConfiguration Configuration
<PageTitle>Category</PageTitle>
<h1>Category List</h1>
<NavLink class="nav-link" href="addcategory">
    <span class="oi oi-bookmark" aria-hidden="true"></span> Add Category
</NavLink>
@if (categoryList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Avaiable</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in categoryList.data)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Avaiable</td>
                </tr>
            }
        </tbody>
    </table>
}
@code {
    private CategoriesList? categoryList;

    protected override async Task OnInitializedAsync()
    {
        categoryList = await Http.GetFromJsonAsync<CategoriesList>("http://localhost:1337/api/categories?populate=*"); 
    }

    public class Category
    {        
        public int Id { get; set; }
        public string Name { get; set; }
        public bool Avaiable { get; set; }

    }

    public class CategoriesList
    {
        public List<Category> data { get; set; }
    }
}
